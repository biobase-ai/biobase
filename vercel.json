{
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "ignoreCommand": "git diff HEAD^ HEAD --quiet ./",
  "outputDirectory": ".next",
  "functions": {
    "api/**/*": {
      "runtime": "nodejs20.x"
    }
  },
  "workspaces": [
    {
      "name": "biobase-www",
      "path": "apps/www",
      "outputDirectory": ".next"
    },
    {
      "name": "biobase-docs",
      "path": "apps/docs",
      "outputDirectory": ".next"
    },
    {
      "name": "biobase-studio",
      "path": "apps/studio",
      "outputDirectory": ".next"
    },
    {
      "name": "biobase-design-system",
      "path": "apps/design-system",
      "outputDirectory": ".next"
    }
  ]
}
