{
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "cd ../.. && npm install && npx turbo run build --filter=docs",
  "installCommand": "cd ../.. && npm install",
  "outputDirectory": ".next",
  "functions": {
    "pages/api/**/*": {
      "runtime": "@vercel/node@3.0.0",
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/www/:path*",
      "destination": "https://biobase.studio/:path*"
    },
    {
      "source": "/studio/:path*",
      "destination": "https://studio.biobase.studio/:path*"
    },
    {
      "source": "/design/:path*",
      "destination": "https://design.biobase.studio/:path*"
    }
  ],
  "build": {
    "env": {
      "NEXT_TELEMETRY_DISABLED": "1",
      "NEXT_PUBLIC_SITE_URL": "https://docs.biobase.studio",
      "NODE_ENV": "production"
    }
  }
}
