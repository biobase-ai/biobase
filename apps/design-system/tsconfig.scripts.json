{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": [
    "../../tsconfig.json",
    "./tsconfig.json"
  ],
  "compilerOptions": {
    "target": "es2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/registry/*": ["./registry/*"],
      "@config/*": ["../../packages/config/*"],
      "@ui/*": ["../../packages/ui/*"],
      "@common/*": ["../../packages/common/*"]
    }
  },
  "include": [
    ".contentlayer/generated", 
    "scripts/**/*.ts", 
    "registry/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next"
  ]
}
